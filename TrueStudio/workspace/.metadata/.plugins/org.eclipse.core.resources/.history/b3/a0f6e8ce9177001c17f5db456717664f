/*
 * File should used only in cnc_task.c
 */

#ifndef INC_CNC_TASK_EXT_H_
#define INC_CNC_TASK_EXT_H_

BOOL enc_mode = FALSE;
BOOL enc_reg_valid = FALSE;
int32_t enc_x_reg = 0, enc_y_reg = 0;

void cnc_setEncModeXY(BOOL ena) {
	if ( cnc_isIdle() )
		enc_mode = ena;
}
BOOL cnc_isEncMode() { return enc_mode; }

void clear_enc_reg() {
	enc_reg_valid = FALSE;
	enc_x_reg = enc_y_reg = 0;
}

#endif /* INC_CNC_TASK_EXT_H_ */
